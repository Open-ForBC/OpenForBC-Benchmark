      <Identifier>input</Identifier>
      <Menu>
        <Entry>
          <Name>Bosphorus 1080p</Name>
          <Value>Bosphorus_1920x1080_120fps_420_8bit_YUV.y4m</Value>
        </Entry>
        <Entry>
          <Name>Bosphorus 4K</Name>
          <Value>Bosphorus_3840x2160.y4m</Value>
        </Entry>
