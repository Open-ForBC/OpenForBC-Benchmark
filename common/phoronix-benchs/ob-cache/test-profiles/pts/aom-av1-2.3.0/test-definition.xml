    <Option>
      <DisplayName>Encoder Mode</DisplayName>
      <Identifier>enc-mode</Identifier>
      <Menu>
        <Entry>
          <Name>Speed 9 Realtime</Name>
          <Value>--cpu-used=9 --rt</Value>
